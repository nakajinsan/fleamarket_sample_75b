<%= image_tag 'logo.png', id: 'pic1', class: 'image' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム %><span class="fieldspan">必須</span><br />
    <%= f.text_field :nickname, autofocus: true, placeholder: "例）フリマ太郎", class:"input_field" %>
  </div>

  <div class="field">
    <%= f.label :Eメールアドレス %><span class="fieldspan">必須</span><br />
    <%= f.email_field :email, autocomplete: "email" ,placeholder: "PC,携帯どちらでも可", class:"input_field" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><span class="fieldspan">必須</span>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,placeholder: "７文字以上", class:"input_field"%>
  </div>

  <div class="field">
    <%= f.label :パスワード（再入力）%><span class="fieldspan">必須</span><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder: "７文字以上", class:"input_field"%>
  </div>

<div class="flex2">
  <%= f.label :お名前（全角）%><span class="fieldspan">必須</span><br />
  <div class="flex">
    <div class="field">
      <%= f.text_field :first_name, autofocus: true,placeholder: "例）山田" , class:"first_name"%>
    </div>

    <div class="field">
      <%= f.text_field :family_name, autofocus: true,placeholder: "例）太郎" , class:"family_name"%>
    </div>
  </div>
</div>

<div class="flex2">
  <%= f.label :お名前カナ（全角） %><span class="fieldspan">必須</span><br />
    <div class="flex">
      <div class="field">
      <%= f.text_field :first_name_kana, autofocus: true,placeholder: "例）ヤマダ" , class:"first＿kana"%>
    </div>

    <div class="field">
      <%= f.text_field :family_name_kana, autofocus: true,placeholder: "例）タロウ" , class:"family_kana"%>
    </div>
  </div>
</div>

  <div class="field">
    <%= f.label :生年月日 %><span class="fieldspan">必須</span><br />
    <%= f.date_select :birthday,{start_year: 1900, end_year: 2020, use_month_numbers: true} , class:"input_fields"%>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録" ,class:"test"%>
<% end %>

<div class= searchs>
<%= render "devise/shared/links" %>
</div>

<%= image_tag 'logo.png', id: 'pic1', class: 'image' %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :Eメールアドレス %><span class="fieldspan">必須</span><br />
    <%= f.email_field :email, autofocus: true, class:"input_field", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><span class="fieldspan">必須</span><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"input_field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン状態を保存する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" ,class:"test"%>
  </div>
<% end %>

  <div class= search>
<%= render "devise/shared/links" %>
</div>
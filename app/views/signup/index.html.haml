.header
  .header__logo
    = image_tag "logo.png",size: "180x60", alt: ""
  .header__logo--nav
    新規会員登録
.contents
  %p
    ニックネーム
    %spanclass 必須
  %input.login-input-text{name: "nickname",placeholder: "ニックネーム",type: "text"}/
  .contents__form
  %p
    メールアドレス
    %spanclass 必須
  %input.login-input-text{name: "email",placeholder: "PC.携帯どちらでも可",type:"email"}/
  .contents__form
  %p
    パスワード
    %spanclass 必須
  %input.login-input-text{name: "password", placeholder: "7文字以上", type: "password"}/
  .contents__form
  %p
    パスワード（再入力）
    %spanclass 必須
  %input.login-input-text{name: "password", placeholder: "7文字以上", type: "password"}/
  .contents__form
  %p
    お名前(全角)
    %spanclass 必須
  %input.login-input-text{name: "name", placeholder: "例)ふりま太郎", type: "text"}/
  .contents__form
  %p
    お名前ふりがな(全角)
    %spanclass 必須
  %input.login-input-text{name: "name", placeholder: "例)ふりまたろう", type: "text"}/
  .contents__form
  %p
    生年月日
    %spanclass 必須
  %input.login-input-text{name: "birthday", placeholder: "1991/03/6", type: "date"}/
  .contents__form
  
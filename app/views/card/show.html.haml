= render "mypages/header_mypage"
.card
  .wrapper
    = render "mypages/side_mypage"
  .users-main
    .right-contents
      .card-show
        .card-show__content
          .card-show__content__title
            クレジットカード情報
          .card-list
            .card-list__info
              .card-list__info__title
                登録カード一覧
              .card-list__info__inner
                .card-list__info__inner__brand
                .card-list__info__inner__number
                  = "**** **** ****" + @initial_card_information.last4 
                .card-list__info__inner__expiration
                  .card-list__info__inner__expiration__title
                    - exp_month = @initial_card_information.exp_month.to_s
                    - exp_year = @initial_card_information.exp_year.to_s.slice(2,3)
                    = "有効期限" + exp_month + " / " + exp_year
                  .card-list__info__inner__expiration__date
        
            .destroy-function
              .destroy-function__link
                = link_to delete_card_index_path, method: :delete, class:"destroy-function__link__button"  do
                  カードを削除する
= render "mypages/footer_mypage"
            